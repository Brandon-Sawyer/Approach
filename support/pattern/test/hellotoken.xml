<Imprint xmlns:Imprint="Render://approach.local">
    <Imprint:Pattern name="hello" type="HTML">
        <div class="hello [@ classToken @] " data-attrib='abc [@ attr_token @] abc' data-hi="world" Imprint:bind="document">
            <span>[@ spanToken @]</span>
            hi [@ person @]!
        </div>
    </Imprint:Pattern>
</Imprint>